{
    "name": "@uvarovag/webpack-config-ts-react",
    "version": "1.2.2",
    "description": "Shared Webpack configuration for React projects using TypeScript",
    "main": "dist/webpack.config.js",
    "module": "dist.es2015/webpack.config.js",
    "types": "dist/webpack.config.d.ts",
    "files": [
        "dist",
        "dist.es2015"
    ],
    "scripts": {
        "build:cjs": "tsc --project tsconfig.cjs.json",
        "build:esm": "tsc --project tsconfig.esm.json",
        "build": "npm run build:cjs && npm run build:esm",
        "fix": "prettier --write '**/*.{ts,tsx,js,json,css,html,md}' && npm pkg fix",
        "publish": "npm run fix && npm run build && npm publish --access public"
    },
    "keywords": [
        "webpack",
        "webpack-config",
        "typescript",
        "build-tool",
        "module-bundler",
        "frontend",
        "config"
    ],
    "author": "@uvarovag",
    "license": "MIT",
    "homepage": "https://github.com/uvarovag/webpack-config-ts-react/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uvarovag/webpack-config-ts-react.git"
    },
    "dependencies": {
        "css-loader": "^7.1.2",
        "fork-ts-checker-webpack-plugin": "^9.0.2",
        "html-webpack-plugin": "^5.6.3",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "webpack-dev-server": "^5.2.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.7",
        "@types/webpack": "^5.28.5",
        "@types/webpack-dev-server": "^4.7.1",
        "@uvarovag/prettier-config": "^1.0.6",
        "prettier": "^3.4.2",
        "typescript": "^5.7.3",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    },
    "peerDependencies": {
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4"
    }
}
